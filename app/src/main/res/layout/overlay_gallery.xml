<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/posterOverlayDownloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_outline_cloud_download_24"
        tools:ignore="ContentDescription"/>

    <ImageView
        android:id="@+id/posterOverlayShareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
        app:layout_constraintEnd_toStartOf="@+id/posterOverlayDownloadButton"
        app:layout_constraintTop_toTopOf="@+id/posterOverlayDownloadButton"
        app:srcCompat="@drawable/ic_share"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/posterOverlayDescriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/backgroundDarkTransparent"
        android:padding="16dp"
        android:textColor="@color/white"
        android:maxLines="5"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</merge>